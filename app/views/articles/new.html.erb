<%= form_with(model: @article) do |f| %>


<div class="post-field">
    <%= f.label :"タイトル" %><br>
    <%= f.text_field :title, required: true, size:"35px", class: "title",placeholder:"5文字以上25文字以内" %>
</div>


<div class="post-field">
    <%= f.label :"本文" %><br>
    <%= f.text_area :content,'data-provider': :summernote %>
</div>

<div class="actions">
    <%= f.submit %>
</div>

<% end %>